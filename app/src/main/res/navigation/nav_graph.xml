<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="org.overlake.mat803.databaseexample.StudentFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_student">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/FirstFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="org.overlake.mat803.databaseexample.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/action_SecondFragment_to_addStudentFragment"
            app:destination="@id/addStudentFragment" />
    </fragment>

    <fragment
        android:id="@+id/addStudentFragment"
        android:name="org.overlake.mat803.databaseexample.StudentAddDialogFragment"
        android:label="Add Fragment" >

    <action
        android:id="@+id/action_global_addStudentFragment"
        app:destination="@id/addStudentFragment"
        app:popUpTo="@id/FirstFragment"
        app:popUpToInclusive="false" />
    </fragment>
</navigation>